{
	"name" :"Page Shadow",
	"version" :"1.2.1",
	"manifest_version": 2,
	"icons": { "64": "icone.png", 
			   "128": "icone_128.png",
               "256": "icone_256.png",
               "512": "icone_512.png" },
	"description" :"Une série d'outils pour améliorer la lecture d'une page dans une pièce mal éclairée/autre.",
	"browser_action" :
	{
		"default_icon": "icone.png",
		"default_popup": "extension.html"
	},
	"options_page": "options.html",
	"permissions": [
		"webNavigation"
	],
	"background": {
		"scripts": ["background.js"]
	},
    "applications": {
      "gecko": {
        "id": "page-shadow@eliastiksofts.com"
      }
    },
	"content_scripts": [{
		"js": [ "jquery.min.js", "content.js"],
		"css": [ "content.css" ],
		"matches": [ "http://*/*", "https://*/*"]
	}]
}
