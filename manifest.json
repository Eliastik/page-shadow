{
	"name" :"Page Shadow",
	"version" :"1.2.1",
	"manifest_version": 2,
	"icons": { "64": "img/icon.png", 
			   "128": "img/icon_128.png",
               "256": "img/icon_256.png",
               "512": "img/icon_512.png" },
	"description" :"Une série d'outils pour améliorer la lecture d'une page dans une pièce mal éclairée/autre.",
	"browser_action" :
	{
		"default_icon": "img/icon.png",
		"default_popup": "extension.html"
	},
	"options_page": "options.html",
	"permissions": [
		"webNavigation"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
    "applications": {
      "gecko": {
        "id": "page-shadow@eliastiksofts.com"
      }
    },
	"content_scripts": [{
		"js": [ "js/jquery.min.js", "js/content.js"],
		"css": [ "css/content.css" ],
		"matches": [ "http://*/*", "https://*/*"]
	}]
}
